<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="@dimen/_50sdp"
    tools:context="com.example.o2chatsdk.fragments.ConversationsFragment"
    android:background="@drawable/selectfile_background"
    android:layout_marginEnd="@dimen/_5sdp"
    >

    <LinearLayout
        android:layout_margin="@dimen/_5sdp"
        android:weightSum="3"
        android:id="@+id/rvConversations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_gravity="center"
                android:id="@+id/layoutFirstLetter"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                >

                <ImageView
                    android:id="@+id/ivFile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:visibility="visible" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_marginStart="@dimen/_5ssp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtFileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/txtSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_7ssp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_gravity="center"
                android:id="@+id/layoutDelete"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                >

                <ImageView
                    android:id="@+id/ivDelete"
                    android:layout_width="@dimen/_18ssp"
                    android:layout_height="@dimen/_18ssp"
                    android:layout_centerInParent="true"
                    android:src="@android:drawable/ic_menu_delete"
                    android:visibility="visible"
                    app:tint="@android:color/holo_red_dark" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>