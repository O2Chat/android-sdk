<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

     android:layout_width="match_parent"
    android:background="@android:color/transparent"
    >


    <LinearLayout
        android:orientation="vertical"
        android:elevation="@dimen/_3sdp"
        android:layout_alignParentRight="true"
        android:id="@+id/layoutUserMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@drawable/message_user_background"
        android:minHeight="@dimen/_32sdp"
        >
        <TextView
            android:id="@+id/textMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:textColor="@color/black"
            android:maxWidth="@dimen/_230sdp"
            android:textSize="@dimen/_13ssp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            >
            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:textSize="@dimen/_8ssp" />

            <ImageView
                android:id="@+id/imageStatus"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_toRightOf="@+id/txtTime"
                android:scaleType="centerCrop"
                android:src="@drawable/send_messagetime"
                android:visibility="visible" />


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/layoutUserMessage"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">

        <TextView
            android:visibility="gone"
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textStyle="bold"
            android:text="haseeb"
            android:textColor="@color/black"
            android:textSize="@dimen/_8ssp" />
    </LinearLayout>


</RelativeLayout>