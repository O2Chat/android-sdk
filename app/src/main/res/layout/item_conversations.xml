<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.arittek.o2chatsdk.fragments.ConversationsFragment">

    <LinearLayout
        android:id="@+id/rvConversations"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/lnProfileUser"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_gravity="center"
                android:id="@+id/layoutFirstLetter"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_9sdp"
                >

                <ImageView
                    android:id="@+id/ivFirstName"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@drawable/circlefill_conversation"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="@dimen/_12sdp"
                        android:id="@+id/txtFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"
                        />
                    <LinearLayout
                        android:visibility="gone"
                        android:background="@drawable/bg_new_tag"
                        android:id="@+id/layoutNewStatus"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:maxLines="2"
                            android:text="@string/lbl_new"
                            android:textSize="@dimen/_9ssp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:id="@+id/txtDate"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:gravity="right|center"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:textSize="@dimen/_10ssp"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1.3"
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivMultimedia"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:visibility="gone"
                        android:layout_marginEnd="@dimen/_5sdp"
                        />

                    <TextView
                        android:id="@+id/txtMessage"
                        android:layout_weight="1.4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:visibility="visible"
                        android:textSize="@dimen/_12ssp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_height="wrap_content"
                    android:gravity="right|center"
                    >

                    <ImageView
                        android:id="@+id/ivSource"
                        android:layout_width="11dp"
                        android:layout_height="18dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:visibility="visible" />
                    <TextView
                        android:id="@+id/txttype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="right|center"
                        android:textSize="@dimen/_10ssp"
                        />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</FrameLayout>