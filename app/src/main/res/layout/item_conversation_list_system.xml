<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.arittek.o2chatsdk.fragments.ConversationsFragment"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:layout_margin="@dimen/_7sdp">

        <TextView
            android:id="@+id/textMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/system_text_color"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="@dimen/_10ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_8ssp"
            android:visibility="gone"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/system_text_color"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnChatResolved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:visibility="gone"
        android:background="@drawable/bg_border_category">

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:textColor="@color/blue_color"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/txtRated"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_4sdp"
                android:textSize="@dimen/_13ssp"
                android:text="@string/lbl_rated"
                android:textColor="@color/blue_color"
                android:textAlignment="center"
                android:gravity="center"
                />

        </LinearLayout>

        <RatingBar
            android:id="@+id/library_normal_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="0"
            android:clickable="false"
            android:isIndicator="true"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_gravity="center"
            android:progressTint="@color/blue_color"
            android:secondaryProgressTint="@color/blue_color"
            android:numStars="5"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:stepSize="1"/>

        <TextView
            android:id="@+id/txtRatingFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/blue_color"
            android:textAlignment="center"
            />


    </LinearLayout>

</LinearLayout>