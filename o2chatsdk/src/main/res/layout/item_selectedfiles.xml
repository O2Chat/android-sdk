<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="140dp"
    android:layout_height="50dp"
    tools:context="com.example.o2chatsdk.fragments.ConversationsFragment"
    android:background="@drawable/selectfile_background"
    android:layout_marginEnd="5dp"
    >

    <LinearLayout
        android:layout_margin="5dp"
        android:weightSum="3"
        android:id="@+id/rvConversations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_gravity="center"
                android:id="@+id/layoutFirstLetter"
                android:layout_width="18dp"
                android:layout_height="18dp"
                >

                <ImageView
                    android:id="@+id/ivFile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:visibility="visible" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtFileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/txtSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="7dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_marginStart="5dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_gravity="center"
                android:id="@+id/layoutDelete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                >

                <ImageView
                    android:id="@+id/ivDelete"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_delete_sdk"
                    android:visibility="visible" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>